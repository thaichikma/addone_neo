<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!--add field -->
            <xpath expr="//notebook/page[@name='invoice_tab']/field/tree/field[@name='product_id']" position="after">
                <field name="maker_id"/>
                <field name="nihon_model"/>
            </xpath>
            <!--hide field -->
            <xpath expr="//group[@name='sale_info_group']/label[@for='ref']" position="replace"/>
            <xpath expr="//group[@name='sale_info_group']/field[@name='ref']" position="replace"/>
            <xpath expr="//group[@name='accounting_info_group']/field[@name='invoice_incoterm_id']" position="replace"/>
            <!--move field -->
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <label for="ref" string="Customer Reference" />
                <field name="ref" nolabel="1"/>
                <field name="invoice_incoterm_id"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_search_inherit" model="ir.ui.view">
        <field name="name">account.move.search.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="line_ids" string="Maker" filter_domain="[('line_ids.product_id.product_tmpl_id.maker_id', 'ilike', self)]"/>
                <field name="line_ids" string="Model" filter_domain="[('line_ids.product_id.product_tmpl_id.nihon_model', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>

</odoo>
