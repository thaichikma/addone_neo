<odoo>

    <record id="product_product_tree_inherit" model="ir.ui.view">
        <field name="name">product.product.tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="maker_id" readonly="1"/>
                <field name="nihon_model" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_search_inherit" model="ir.ui.view">
        <field name="name">product.product.search.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='maker_id']" position="replace">
                <field name="maker_id" string="Maker" filter_domain="[('product_tmpl_id.maker_id.name', 'ilike', self)]"/>
            </xpath>
            <xpath expr="//field[@name='nihon_model']" position="replace">
                <field name="nihon_model" string="Model" filter_domain="[('product_tmpl_id.nihon_model', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>

</odoo>